<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.purple3.popularmoviesstageone.DetailActivity"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_original_title_heading"
            android:layout_width="93dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="132dp"
            android:text="@string/original_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_original_title"
            android:layout_width="238dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="132dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_original_title_heading"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_plot_synopsis_heading"
            android:layout_width="124dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:text="@string/overview"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_plot_synopsis"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_date_heading"
            app:layout_constraintVertical_bias="0.413" />

        <TextView
            android:id="@+id/tv_plot_synopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="140dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_plot_synopsis_heading"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_user_rating_heading"
            android:layout_width="67dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="176dp"
            android:text="@string/user_rating"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_user_rating"
            android:layout_width="198dp"
            android:layout_height="21dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="176dp"
            app:layout_constraintStart_toEndOf="@+id/tv_user_rating_heading"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_release_date_heading"
            android:layout_width="96dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="@string/release_date"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_rating_heading" />

        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="200dp"
            android:layout_height="22dp"
            android:layout_marginBottom="94dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_plot_synopsis"
            app:layout_constraintStart_toEndOf="@+id/tv_release_date_heading"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_rating" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
